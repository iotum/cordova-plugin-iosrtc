{
  "extends": [
    "plugin:prettier/recommended"
  ],
  "ignorePatterns": ["www/**/*.js"],
  "env": {
    "es6": true
  },
  "rules": {
    "strict": "off",
    "radix": "warn",
    "accessor-pairs": "warn",
    "array-callback-return": "warn",
    "no-undef": "warn",
    "no-unused-vars": "warn",
    "no-use-before-define": "warn",
    "no-implicit-coercion": "warn",
    "no-setter-return": "warn",
    "no-extra-boolean-cast": "warn",
    "indent": [
      2,
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "no-with": 2
  }
}
